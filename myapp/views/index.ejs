<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>

  <div>
    <h3>Sign Up</h3>
  </div>

  <div>
    <form action="/addUser" method="POST">
      <label for="firstname">Firstname:</label>
      <input type="text" name="firstname">
      <label for="lastname">Lastname:</label>
      <input type="text" name="lastname">
      <button type="submit">Submit</button>
    </form>
    
  </div>

  <div>
    <table>
      <thead>
        <tr>
          <th>No</th>
          <th>User ID</th>
          <th>Firstname</th>
          <th>Lastname</th>
          <th>UpdatedAt</th>
          <th>CreatedAt</th>
        </tr>
      </thead>
      <tbody>
        <% if (users.length < 1) { %>
        <tr>
          <td><p>Tidak ada todo</p></td>
        <tr>
        <% } else {
          let no = 1;
          users.forEach(user => {
        %>
            <tr>
              <td><%- no %></td>
              <td><%- user.id %></td>
              <td><%- user.firstname %></td>
              <td><%- user.lastname %></td>
              <td><%- user.updatedAt %></td>
              <td><%- user.createdAt %></td>
            </tr>
            <%
            no++;
          });
          }
        %>
      </tbody>
    </table>
  </div>

</body>
</html>