<!DOCTYPE html>
<html>
<head>
</head>
<body>
  <h1><%= title %></h1>
  <form action="/showUsers" method="get">
    <input type="submit" value="Show Users"></input>
  </form>
  <br/>
  <form action="/addUser" method="post">
    <table>
      <tr>
        <th>First Name*</th>
        <th>Last Name</th>
        <th>Phone Number</th>
      </tr>
      <tr>
        <td><input type="text" name="firstname"></input></td>
        <td><input type="text" name="lastname"></input></td>
        <td><input type="text" name="phone"></input></td>
        <td><input type="submit" value="Add User"></input></td>
      </tr>
    </table>
  </form>
  <br/>
  <form action="/updateUser" method="get">
    <table>
    <tr>
      <th>User ID to Update*</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone Number</th>
    </tr>
    <tr>
      <td><input type="text" name="id"></input></td>
      <td><input type="text" name="firstname"></input></td>
      <td><input type="text" name="lastname"></input></td>
      <td><input type="text" name="phone"></input></td>
      <td><input type="submit" value="Update User"></input></td>
    </tr>
  </table>
  </form>
  <br/>
  <form onsubmit="return confirm('Are you sure you want to delete user?');" action="/deleteUser" method="get">
    <table>
    <tr>
      <th>User ID to Delete*</th>
    </tr>
    <tr>
      <td><input type="text" name="id"></input></td>
      <td><input type="submit" value="Delete User"></input></td>
    </tr>
  </table>
  </form>
  <br/>
  <table>
    <% if (users) { %>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone Number</th>
    </tr>
      <% users.forEach(user => { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.phone %></td>
      </tr>
      <% }) %>
    <% } %>
    <tr>
    </tr>
  </table>
</body>
</html>
